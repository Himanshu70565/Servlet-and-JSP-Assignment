<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Flower and Card Page Redirector</display-name>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>FlowerController</servlet-name>
    <servlet-class>com.demo.FlowerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FlowerController</servlet-name>
    <url-pattern>/flowerController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CardController</servlet-name>
    <servlet-class>com.demo.CardController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CardController</servlet-name>
    <url-pattern>/cardController</url-pattern>
  </servlet-mapping>
</web-app>