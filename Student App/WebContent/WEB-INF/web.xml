<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>Student App</display-name>
	<welcome-file-list>
		<welcome-file>register.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>AddStudentController</servlet-name>
		<servlet-class>com.studentapp.AddStudentController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddStudentController</servlet-name>
		<url-pattern>/addStudent</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>ShowStudentController</display-name>
		<servlet-name>ShowStudentController</servlet-name>
		<servlet-class>com.studentapp.ShowStudentController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowStudentController</servlet-name>
		<url-pattern>/showStudents</url-pattern>
	</servlet-mapping>
</web-app>